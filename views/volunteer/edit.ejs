<%- include('../layout/includes/header', { title: 'User Index Page' }) %>

    <div class="row fixed-div_">
        <nav aria-label="breadcrumb" class="breadcrumbs">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="#">Volunteers</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Volunteer </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form action="">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="title_head">
                                    <h4>Edit Volunteer Info.</h4>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label class="form-label">Volunteer Type</label>
                                    <select class="form-control select2_without_search">
                                        <option value="">Select</option>
                                        <option value="">Volunteers</option>
                                        <option value="">Patient</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">Surname</label>
                                    <input type="text" class="form-control" id="" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">Date of registry</label>
                                    <div class="input-group" id="datepicker16">
                                        <input type="text" class="form-control" placeholder="dd M, yyyy"
                                            data-date-format="dd M, yyyy" data-date-container='#datepicker16'
                                            data-provide="datepicker">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">DNI (Identification
                                        Number)</label>
                                    <input type="text" class="form-control" id="" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">Mobile phone</label>
                                    <input type="text" class="form-control" id="" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">Email</label>
                                    <input type="text" class="form-control" id="" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">Street</label>
                                    <input type="text" class="form-control" id="" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">Postal code</label>
                                    <input type="text" class="form-control" id="" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">Province</label>
                                    <input type="text" class="form-control" id="" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label class="form-label">Country of origin</label>
                                    <select class="form-control select2_without_search">
                                        <option>Select</option>
                                        <option value="afghanistan">Afghanistan</option>
                                        <option value="albania">Albania</option>
                                        <option value="brazil">Brazil</option>
                                        <option value="canada">Canada</option>
                                        <option value="denmark">Denmark</option>
                                        <option value="egypt">Egypt</option>
                                        <option value="france">France</option>
                                        <option value="germany">Germany</option>
                                        <option value="india">India</option>
                                        <option value="japan">Japan</option>
                                        <option value="kenya">Kenya</option>
                                        <option value="mexico">Mexico</option>
                                        <option value="norway">Norway</option>
                                        <option value="peru">Peru</option>
                                        <option value="qatar">Qatar</option>
                                        <option value="russia">Russia</option>
                                        <option value="south-korea">South Korea</option>
                                        <option value="thailand">Thailand</option>
                                        <option value="united-kingdom">United Kingdom</option>
                                        <option value="united-states">United States</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label class="form-label">Gender</label>
                                    <select class="form-control select2_without_search">
                                        <option>Select</option>
                                        <option>Male</option>
                                        <option>Female</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-4">
                                    <label class="form-label">Date of Birth</label>
                                    <div class="input-group" id="datepicker1">
                                        <input type="text" class="form-control" placeholder="dd M, yyyy"
                                            data-date-format="dd M, yyyy" data-date-container='#datepicker1'
                                            data-provide="datepicker">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label class="form-label">How he/she can come to us?</label>
                                    <select class="form-control select2_without_search">
                                        <option>Select</option>
                                        <option>Social media</option>
                                        <option>Friends </option>
                                        <option>Neightbourhood</option>
                                        <option>Other</option>

                                    </select>

                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label class="form-label">Status</label>
                                    <select class="form-control select2_without_search">
                                        <option>Select</option>
                                        <option>Active </option>
                                        <option> Removed (bad praxis) </option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label class="form-label">Type of skin</label>
                                    <select class="form-control select2_without_search">
                                        <option>Select</option>
                                        <option>Normal</option>
                                        <option>Sensitive</option>
                                    </select>

                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label class="form-label">Type of skin (hydration)</label>
                                    <select class="form-control select2_without_search">
                                        <option>Select</option>
                                        <option>Very Dry</option>
                                        <option>Dry</option>
                                        <option>Normal</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label class="form-label"> Type of skin (sebum)</label>
                                    <select class="form-control select2_without_search">
                                        <option>Select</option>
                                        <option>Dry</option>
                                        <option>Combination / Oily</option>

                                    </select>

                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3 form-group">
                                    <label class="form-label"> Pathology</label>
                                    <select class="form-control select2_without_search">
                                        <option>Select</option>
                                        <option>Psoriasis </option>
                                        <option>Dermatitis</option>
                                        <option>Vitiligo</option>
                                        <option>Lentigo</option>
                                        <option>Melasma</option>
                                        <option>Acne</option>

                                    </select>

                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">upload a picture</label>
                                    <input name="file1" type="file" class="dropify" data-height="100" />
                                </div>

                            </div>



                            <div class="col-lg-6">
                                <div class="mb-3 form-group">
                                    <label for="validationCustom01" class="form-label">Upload Terms & policies
                                        Document</label>
                                    <input name="file1" type="file" class="dropify" data-height="100" />
                                </div>

                            </div>
                            <div class="col-lg-12">
                                <div class="text-end">
                                    <a href="/volunteers/list"
                                        class="btn btn-primary waves-effect waves-light">Submit</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div> <!-- end col -->
    </div>

    <%- include('../layout/includes/footer') %>